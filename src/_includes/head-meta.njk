<link rel="icon" type="image/x-icon" href="/assets/img/favicon.ico?v=2" />
<link rel="shortcut icon" type="image/x-icon" href="/assets/img/favicon.ico?v=2" />
<meta name="generator" content="{{ eleventy.generator }}">
{% set absoluteUrl = settings.meta.siteUrl ~ page.url %}
{% set absoluteTitle = settings.meta.siteTitle %}

{% if title %}
    {% set absoluteTitle = title ~ ' > ' ~ absoluteTitle %}
{% endif %}




{% set absoluteDescription = settings.meta.siteDescription %}

{% if description %}
    {% set absoluteDescription = description %}
{% endif %}

<meta name="description" content="{{ absoluteDescription }}">

<!-- Facebook Meta Tags -->
<meta property="og:url" content="{{ absoluteUrl }}" >
<meta property="og:type" content="website">
<meta property="og:title" content="{{ absoluteTitle }}">
<meta property="og:description" content="{{ absoluteDescription }}">
<meta property="og:image" content="{{ settings.meta.siteImage }}">

<!-- Twitter Meta Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta property="twitter:domain" content="ademhatay.com">
<meta property="twitter:url" content="{{ absoluteUrl }}">
<meta name="twitter:title" content="Adem Hatay | Software Developer">
<meta name="twitter:description" content="{{ absoluteDescription }}">
<meta name="twitter:image" content="{{ settings.meta.siteImage }}">
